namespace SmartMealPlanner.Core.Models;

public sealed class UserPreference
{
    public List<string> DietTags { get; set; } = new();
    public List<string> Disliked { get; set; } = new();
    public Dictionary<string, double> CuisineWeights { get; set; } = new(); // e.g., "italian": 1.2
    public int MissingTolerance { get; set; } = 2;
}
